{
  "name": "gesproducao-v2",
  "version": "1.0.0",
  "description": "Sistema de gestão de produção para tinturaria e estamparia",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec tsx src/server.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run server:build && npm run client:build",
    "server:build": "tsc",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "studio": "jaspersoft-studio -data ./src/templates/jasper"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "grapesjs": "^0.22.12",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ini": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "node-firebird": "^1.1.7",
    "puppeteer": "^24.20.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-grid-layout": "^1.5.2",
    "sql-formatter": "^15.6.9",
    "stimulsoft-reports-js": "^2025.3.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.1.0",
    "@types/ini": "^4.1.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
